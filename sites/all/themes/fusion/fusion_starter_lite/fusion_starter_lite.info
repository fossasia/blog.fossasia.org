
name = Fusion Starter Lite
description = Fusion Starter Lite sub-theme. Requires <a href="http://drupal.org/project/fusion">Fusion Core</a> and the <a href="http://drupal.org/project/skinr">Skinr</a> module to enable easy point-and-click theming.
base theme = fusion_core
core = 6.x
engine = phptemplate

stylesheets[all][] = css/fusion-starter-lite-style.css

regions[sidebar_first] = sidebar first
regions[sidebar_last] = sidebar last
regions[header] = header
regions[content] = content
regions[footer] = footer

; Default theme settings
settings[theme_grid] = grid12-960
settings[theme_grid_options][] = grid12-960
settings[theme_grid_options][] = grid12-fluid
settings[fluid_grid_width] = fluid-100
settings[theme_font_size] = font-size-12
settings[sidebar_layout] = sidebars-split
settings[sidebar_first_width] = 2
settings[sidebar_last_width] = 2

; Widths for 12 column, 960px/fluid grid
skinr[grid12-width][title] = Width (12 column grid)
skinr[grid12-width][type] = select
skinr[grid12-width][features][] = block
skinr[grid12-width][options][1][label] = 1 unit wide (80px/8.33%)
skinr[grid12-width][options][1][class] = grid12-1
skinr[grid12-width][options][2][label] = 2 units wide (160px/16.67%)
skinr[grid12-width][options][2][class] = grid12-2
skinr[grid12-width][options][3][label] = 3 units wide (240px/25%)
skinr[grid12-width][options][3][class] = grid12-3
skinr[grid12-width][options][4][label] = 4 units wide (320px/33.33%)
skinr[grid12-width][options][4][class] = grid12-4
